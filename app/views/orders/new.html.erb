<div class="container my-5">
  <h2 class="mb-4 text-center">장바구니</h2>
  <div class="row">
    <table class="table table-striped">
      <thead>
        <th>주문 상품</th>
        <th>상품 가격</th>
        <th>주문 수량</th>
        <th>주문 가격</th>
      </thead>
      <tbody>
        <% @order.line_items.each do | line_item | %>
        <tr>
          <td><%= Item.find_by(id: line_item.item_id).title %></td>
          <td><%= line_item.price %>원</td>
          <td><%= line_item.quantity %>개</td>
          <td><%= line_item.price * line_item. quantity%>원</td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= link_to "결제 하러 가기", edit_order_path(@order), class: "btn btn-outline-danger float-right" if @order.line_items.present? %>
</div>